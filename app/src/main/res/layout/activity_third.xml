<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="691dp"
        android:text="Toggle to see the picture."
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switchId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/switchId"
        app:layout_constraintStart_toStartOf="@+id/switchId"
        app:layout_constraintTop_toBottomOf="@+id/switchId"
        android:id="@+id/switchImageViewID"
        android:src="@drawable/vishal_photo"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Please rate the above image."
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/switchImageViewID"
        app:layout_constraintStart_toStartOf="@+id/switchImageViewID"
        app:layout_constraintTop_toBottomOf="@+id/switchImageViewID" />

    <SeekBar
        android:id="@+id/seekBarId"
        android:layout_marginTop="16dp"
        android:max="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/seekValueTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/seekBarId"
        app:layout_constraintStart_toStartOf="@+id/seekBarId"
        app:layout_constraintTop_toBottomOf="@+id/seekBarId" />

    <Button
        android:id="@+id/btnFourthActivityId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:onClick="FourthPage"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/seekValueTextViewId"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="@+id/seekValueTextViewId"
        app:layout_constraintTop_toBottomOf="@+id/seekValueTextViewId" />


</androidx.constraintlayout.widget.ConstraintLayout>